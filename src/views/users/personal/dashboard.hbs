<div class="dashboard">
    <div class="balans">
        <h3>YOUR BALANCE</h3>
        <h1>{{amount}} uzs</h1>
    </div>
    <div class="lastWeekTransaction">
        Last Week Transactions
    </div>

    <div class="cards">
        <div class="card-container">
            <div class="card-face">
                <div class="card-logo">
                    {{!-- <img
                        src="https://banner2.cleanpng.com/20180712/vph/kisspng-computer-icons-credit-card-mastercard-american-exp-credit-card-icon-5b479a47818767.2875252415314192075306.jpg"
                        alt="Credit Card Logo"> --}}
                    <h4>PayChain</h4>
                </div>
                <div class="card-number">
                    {{#each walletData}}
                    <h2>{{address}}</h2>
                    {{/each}}
                </div>
                <div class="card-details">
                    <div class="card-name">
                        {{#each userData}}
                        <p>{{firstname}} {{lastname}} </p>
                        {{/each}}
                    </div>
                    <div class="card-expiry">
                        <p>01/01</p>
                    </div>
                </div>
            </div>
            <div class="card-back">
                <div class="card-cvv">
                    <h3>Code</h3>
                    {{#each walletData}}
                    <p>{{code}}</p>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

<h2 class="title d">Previous Transactions</h2>

<div class="dashboardTable">
    <table>
        <thead>
            <tr>
                <th> ID </th>
                <th> Client </th>
                <th> Date </th>
                <th> Amount </th>
                <th> Status </th>
                <th> Pay Url </th>
            </tr>
        </thead>
        <tbody>
            {{#each alltransactions}}
            <tr>
                <td>{{id}}</td>
                <td>{{send_card }}</td>
                <td>{{date}}</td>
                <td>{{transfer}}</td>
                <td>{{status}}</td>
                <td>{{pay_url}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>